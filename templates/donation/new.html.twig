{% extends 'base.html.twig' %}

{% block title %}Faire un don{% endblock %}

{% block body %}
<h2 class="bg-secondary p-3 text-center text-white rounded-bottom">Faire un don</h2>

<form class="my-4">
    {# Formulaire pour les détails généraux du don #}
    <label for="title-donation" class="mt-3">Titre du don</label>
    <input placeholder="Titre du don" id="title-donation" name="title-donation" class="form-control">
    <label for="donation-pic" class="mt-3">Insérer une image pour le don</label>
    <input type="file" class="form-control-file" id="donation-pic">

    {# Affichage dynamique des dons ajoutés au fur et a mesure au don#}
    <div class="my-5 products-list">
        <h3>Liste des produits</h3>
        <ul class="list-group">
        </ul>
    </div>

    {# Affichage du bouton d'ajout de produit au don #}
    <div id='btn-zone'>

    </div>

    {# Affichage du formulaire d'ajout de produit au don #}
    <div id="new-product-form">

    </div>

    <button class="btn btn-secondary float-right">Publier le don</button>
</form>

            {{ form_start(form, {'attr': { 'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                <button type='submit' class="btn btn-secondary">Valider votre réponse</button>
            {{ form_end(form) }}

{# Template du formulaire d'ajout de produit au don #}
<template id="form-template">
    <form class="form-product">
        <div class="form-group">
            <label for="product">product</label>
            <input type="text" class="form-control" id="product" name="product" value="" placeholder="name@example.com">
        </div>
        <div class="form-group">
            <label for="quantity">quantity</label>
            <select class="form-control" id="quantity">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="form-group">
            <label for="category">category</label>
            <select class="form-control" id="category">
                
                <option>mes catégories</option>
                
            </select>
        </div>
        <div class="form-group">
            <label for="description">description</label>
            <textarea class="form-control" id="description" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-secondary " id="btn-add-product">Enregistrer un produit</button>
    </form>
</template>
{% endblock %}