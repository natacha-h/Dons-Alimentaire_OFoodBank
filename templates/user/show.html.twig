{% extends 'base.html.twig' %}

{% block title %}Page de profil{% endblock %}

{% block picture_header %}{% endblock %}

{% block body %}
    <h2 class="text-center">Mon Profil</h2>

    {# Informations du User #}
    <div class="container mb-4">
        <div class="profil-bg rounded col-sm-10 col-12 m-auto text-dark p-2 text-center">
            <h5 class="">{{ user.firstname }} {{ user.lastname }}</h5>
            <h5 class="">Entreprise : {{ user.company }}</h5>
            <h5>Téléphone : {{ user.phoneNumber }}</h5>
            <h5 class="">{{ user.email }}</h5>
            {% if is_granted('ROLE_GIVER') %}
            <h5 class="">Note : {{ user.rating }} / 5</h5>
            <h5 class="">Niveau : {{ user.reward.title }}</h5>
            {% endif %}
            
            <h5 class=""><a href="#modif-profil" class="text-dark stretched-link">Modifer mon profil</a></h5>
        </div>
    </div>
    
    {# Dons reçus ou effectués en fonction du rôle du user connecté !#}
    <div class="text-center container ">

{# Si on est connecté en tant que DONATEUR #}
        {% if is_granted('ROLE_GIVER') %}

        {# Dons proposés #}
        <h3 id="#dons" class="font-italic text-center">Dons proposés</h3>
        <button type="button" class="btn-success rounded border p-3 mt-2"><a href="{{path('donation_new')}}" class="text-white">Nouveau don</a></button>
        <div class="d-flex flex-wrap mt-4 border-bottom">
            {% for donation in donations if donation.status.name == "Dispo" %}
            <div class="col-sm-5 col-10 m-4 p-3 mx-auto border rounded">
            <h4 class="font-italic">
                {{ donation.title }}
            </h4>
            <img class="border rounded img-fluid" style="max-width: 80%;" src="{{ asset('uploads/pictures/' ~ donation.picture) }}"></img>
            <button type="button" class="btn-success rounded border p-2 mt-2"><a href="{{path('donation_show', {'id': donation.id })}}" class="text-white">Plus d'infos</a></button>            
            </div>
            {% endfor %}
        </div>

        {# Dons en attente de validation #}
        <h3 id="#dons" class="font-italic text-center mt-4">Dons en attente de validation</h3>
            <a class="" href=" {{ path('user_manage_donations', {'id': app.user.id })}} ">Valider vos dons réservés</a>
        <div class="d-flex flex-wrap mt-4 border-bottom">        
            {% for donation in donations if donation.status.name == "Réservé" %}
            <div class="col-sm-5 col-10 m-4 p-3 mx-auto border rounded">
            <h4 class="font-italic">
                {{ donation.title }}
            </h4>
            <img class="border rounded img-fluid" style="max-width: 80%;" src="{{ asset('uploads/pictures/' ~ donation.picture) }}"></img>
            <button type="button" class="btn-success rounded border p-2 mt-2"><a href="{{path('donation_show', {'id': donation.id })}}" class="text-white">Plus d'infos</a></button>            
            </div>
            {% endfor %}
        </div>

        {# Dons Donnés #}
        <h3 id="#dons" class="font-italic text-center mt-4">Dons effectués</h3>
        <div class="d-flex flex-wrap mt-4 border-bottom">
            {% for donation in donations if donation.status.name == "Donné" %}
            <div class="col-sm-5 col-10 m-4 p-3 mx-auto border rounded">
            <h4 class="font-italic">
                {{ donation.title }}
            </h4>
            <img class="border rounded img-fluid" style="max-width: 80%;" src="{{ asset('uploads/pictures/' ~ donation.picture) }}"></img>
            <button type="button" class="btn-success rounded border p-2 mt-2"><a href="{{path('donation_show', {'id': donation.id })}}" class="text-white">Plus d'infos</a></button>            
            </div>
            {% endfor %}
        </div>

{# Si on est connecté en tant qu'ASSOCIATION #}
        {% elseif is_granted('ROLE_ASSOC') %}

        {# Dons réservés #}
        <h3 id="#dons" class="font-italic text-center">Dons réservés</h3>
        <div class="d-flex flex-wrap mt-4">
            {% for donation in donations if donation.status.name == "Réservé" %}
            <div class="col-sm-5 col-10 m-4 p-3 mx-auto border rounded">
            <h4 class="font-italic">
                {{ donation.title }}
            </h4>
            <img class="border rounded img-fluid" style="max-width: 80%;" src="{{ asset('uploads/pictures/' ~ donation.picture) }}"></img>
            <button type="button" class="btn-success rounded border p-2 mt-2"><a href="{{path('donation_show', {'id': donation.id })}}" class="text-white">Plus d'infos</a></button>            
            </div>
            {% endfor %}
        </div>

        {# Dons Reçus #}
        <h3 id="#dons" class="font-italic text-center">Dons reçus</h3>
        <div class="d-flex flex-wrap mt-4">
            {% for donation in donations if donation.status.name == "Donné" %}
            <div class="col-sm-5 col-10 m-4 p-3 mx-auto border rounded">
            <h4 class="font-italic">
                {{ donation.title }}
            </h4>
            <img class="border rounded img-fluid" style="max-width: 80%;" src="{{ asset('uploads/pictures/' ~ donation.picture) }}"></img>
            <button type="button" class="btn-success rounded border p-2 mt-2"><a href="{{path('donation_show', {'id': donation.id })}}" class="text-white">Plus d'infos</a></button>            
            </div>
            {% endfor %}
        </div>
        </div>
        {% endif %}
    </div>

    {# Formulaire pour modifier ses données de profil #}
    <h2 id="modif-profil" class="text-center m-4">Modifier mon profil</h2>
    
    {{ include('user/_form-profil.html.twig') }}

    <a href="#">Haut de la page</a>
{% endblock %}